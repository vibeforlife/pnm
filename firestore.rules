rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Groups collection
    match /groups/{groupId} {
      // Allow anyone to read group documents (needed for password verification)
      allow read: if true;
      
      // Allow anyone to create a new group
      allow create: if true;
      
      // Only allow updates and deletes (not implemented yet, but for future)
      allow update, delete: if false;
    }
  }
}
